    <title>Sign Up - Mandvi's Web App</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow-x: hidden;
            padding: 1rem 0;
        }
        
        /* Animated Background Elements */
        .bg-elements {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
        }
        
        .floating-shape {
            position: absolute;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: float 8s ease-in-out infinite;
        }
        
        .floating-shape:nth-child(1) {
            width: 70px;
            height: 70px;
            top: 15%;
            left: 15%;
            animation-delay: 0s;
        }
        
        .floating-shape:nth-child(2) {
            width: 90px;
            height: 90px;
            top: 70%;
            right: 15%;
            animation-delay: 3s;
        }
        
        .floating-shape:nth-child(3) {
            width: 50px;
            height: 50px;
            bottom: 25%;
            left: 25%;
            animation-delay: 6s;
        }
        
        .floating-shape:nth-child(4) {
            width: 110px;
            height: 110px;
            top: 5%;
            right: 25%;
            animation-delay: 1.5s;
        }
        
        .floating-shape:nth-child(5) {
            width: 35px;
            height: 35px;
            top: 45%;
            left: 5%;
            animation-delay: 4.5s;
        }
        
        @keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            25% { transform: translateY(-25px) rotate(90deg); }
            50% { transform: translateY(-10px) rotate(180deg); }
            75% { transform: translateY(-20px) rotate(270deg); }
        }
        
        /* 3D Character Animation */
        .character-stage {
            position: absolute;
            top: 5%;
            left: 50%;
            transform: translateX(-50%);
            z-index: 2;
            perspective: 1200px;
        }
        
        .character-container {
            transform-style: preserve-3d;
            animation: characterDance 4s ease-in-out infinite;
        }
        
        .character {
            font-size: 5.5rem;
            text-shadow: 0 15px 30px rgba(0, 0, 0, 0.4);
            animation: characterSpin 6s linear infinite;
        }
        
        @keyframes characterDance {
            0%, 100% { transform: translateY(0px) rotateX(0deg) scale(1); }
            25% { transform: translateY(-20px) rotateX(10deg) scale(1.1); }
            50% { transform: translateY(-10px) rotateX(-5deg) scale(1.05); }
            75% { transform: translateY(-15px) rotateX(8deg) scale(1.08); }
        }
        
        @keyframes characterSpin {
            0% { transform: rotateY(0deg) rotateZ(0deg); }
            25% { transform: rotateY(90deg) rotateZ(5deg); }
            50% { transform: rotateY(180deg) rotateZ(0deg); }
            75% { transform: rotateY(270deg) rotateZ(-5deg); }
            100% { transform: rotateY(360deg) rotateZ(0deg); }
        }
        
        /* Main Container */
        .main-container {
            position: relative;
            z-index: 3;
            width: 100%;
            max-width: 950px;
            margin: 0 auto;
            padding: 1rem;
        }
        
        /* Form Card with Advanced 3D Effects */
        .form-card {
            background: rgba(255, 255, 255, 0.14);
            backdrop-filter: blur(45px);
            border: 2px solid rgba(255, 255, 255, 0.2);
            border-radius: 40px;
            padding: 3rem 4rem;
            box-shadow: 
                0 30px 70px rgba(0, 0, 0, 0.18),
                0 12px 35px rgba(102, 126, 234, 0.12),
                inset 0 1px 0 rgba(255, 255, 255, 0.35);
            animation: cardEntrance 1.2s cubic-bezier(0.4, 0, 0.2, 1);
            transform-style: preserve-3d;
            position: relative;
            overflow: hidden;
            margin-top: 1.5rem;
            display: flex;
            align-items: center;
            gap: 4rem;
            min-height: 550px;
        }
        
        .form-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #667eea, #764ba2, #f093fb, #667eea, #764ba2);
            background-size: 300% 100%;
            border-radius: 40px 40px 0 0;
            animation: gradientFlow 4s ease-in-out infinite;
        }
        
        @keyframes gradientFlow {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
        
        .form-card:hover {
            transform: translateY(-10px) rotateX(3deg) rotateY(1deg);
            box-shadow: 
                0 40px 90px rgba(0, 0, 0, 0.25),
                0 18px 45px rgba(102, 126, 234, 0.18),
                inset 0 1px 0 rgba(255, 255, 255, 0.45);
            border-color: rgba(255, 255, 255, 0.3);
        }
        
        @keyframes cardEntrance {
            0% { 
                opacity: 0; 
                transform: translateY(80px) rotateX(-20deg) scale(0.8);
            }
            60% {
                opacity: 0.8;
                transform: translateY(-10px) rotateX(5deg) scale(1.02);
            }
            100% { 
                opacity: 1; 
                transform: translateY(0) rotateX(0deg) scale(1);
            }
        }
        
        /* Form Header */
        .form-header {
            text-align: center;
            flex: 1;
            padding-right: 2rem;
            animation: headerSlideIn 1.5s ease-out 0.4s both;
        }
        
        .form-icon {
            width: 90px;
            height: 90px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 30%, #f093fb 70%, #667eea 100%);
            border-radius: 26px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.8rem;
            font-size: 2.8rem;
            color: white;
            box-shadow: 
                0 25px 50px rgba(102, 126, 234, 0.5),
                0 12px 25px rgba(118, 75, 162, 0.4),
                0 6px 12px rgba(240, 147, 251, 0.3),
                inset 0 2px 4px rgba(255, 255, 255, 0.25);
            animation: iconPulse 3s ease-in-out infinite;
            transform-style: preserve-3d;
            border: 3px solid rgba(255, 255, 255, 0.2);
        }
        
        @keyframes iconPulse {
            0%, 100% { 
                transform: translateZ(0px) rotateY(0deg) scale(1);
                box-shadow: 
                    0 25px 50px rgba(102, 126, 234, 0.5),
                    0 12px 25px rgba(118, 75, 162, 0.4),
                    0 6px 12px rgba(240, 147, 251, 0.3),
                    inset 0 2px 4px rgba(255, 255, 255, 0.25);
            }
            50% { 
                transform: translateZ(18px) rotateY(10deg) scale(1.08);
                box-shadow: 
                    0 35px 70px rgba(102, 126, 234, 0.7),
                    0 18px 35px rgba(118, 75, 162, 0.6),
                    0 9px 18px rgba(240, 147, 251, 0.5),
                    inset 0 2px 4px rgba(255, 255, 255, 0.35);
            }
        }
        
        .form-title {
            font-size: 3rem;
            font-weight: 800;
            color: white;
            margin-bottom: 1rem;
            text-shadow: 0 6px 12px rgba(0, 0, 0, 0.4);
        }
        
        .form-subtitle {
            color: rgba(255, 255, 255, 0.85);
            font-size: 1.3rem;
            font-weight: 500;
        }
        
        @keyframes headerSlideIn {
            0% { opacity: 0; transform: translateY(-30px) rotateX(-10deg); }
            100% { opacity: 1; transform: translateY(0) rotateX(0deg); }
        }
        
        /* Form Content */
        .form-content {
            flex: 1;
            padding-left: 2rem;
        }
        
        /* Enhanced Form Groups */
        .form-group {
            margin-bottom: 2.5rem;
            animation: groupFadeIn 1s ease-out both;
        }
        
        .form-group:nth-child(1) { animation-delay: 0.6s; }
        .form-group:nth-child(2) { animation-delay: 0.8s; }
        .form-group:nth-child(3) { animation-delay: 1s; }
        
        @keyframes groupFadeIn {
            0% { opacity: 0; transform: translateX(-40px) rotateY(-10deg); }
            100% { opacity: 1; transform: translateX(0) rotateY(0deg); }
        }
        
        .form-label {
            display: block;
            margin-bottom: 0.9rem;
            font-weight: 700;
            color: white;
            font-size: 1rem;
            text-shadow: 0 3px 6px rgba(0, 0, 0, 0.3);
            letter-spacing: 0.5px;
        }
        
        .input-container {
            position: relative;
            transform-style: preserve-3d;
        }
        
        .form-input {
            width: 100%;
            padding: 1.8rem 1.8rem 1.8rem 4.5rem;
            border: 2.5px solid rgba(255, 255, 255, 0.3);
            border-radius: 20px;
            background: rgba(255, 255, 255, 0.15);
            color: white;
            font-size: 1.2rem;
            font-weight: 600;
            transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
            backdrop-filter: blur(25px);
            box-shadow: 
                0 12px 40px rgba(0, 0, 0, 0.15),
                0 6px 20px rgba(102, 126, 234, 0.1),
                inset 0 2px 4px rgba(255, 255, 255, 0.25);
            position: relative;
            transform-style: preserve-3d;
        }
        
        .form-input::placeholder {
            color: rgba(255, 255, 255, 0.65);
            font-weight: 500;
        }
        
        .form-input:focus {
            outline: none;
            border-color: rgba(102, 126, 234, 0.8);
            background: rgba(255, 255, 255, 0.22);
            transform: translateY(-6px) translateZ(12px) scale(1.02);
            box-shadow: 
                0 25px 60px rgba(102, 126, 234, 0.4),
                0 12px 30px rgba(118, 75, 162, 0.3),
                0 6px 15px rgba(240, 147, 251, 0.2),
                0 0 0 5px rgba(102, 126, 234, 0.15),
                inset 0 2px 4px rgba(255, 255, 255, 0.35);
        }
        
        .input-icon {
            position: absolute;
            left: 1.8rem;
            top: 50%;
            transform: translateY(-50%);
            font-size: 1.5rem;
            color: rgba(255, 255, 255, 0.75);
            pointer-events: none;
            transition: all 0.4s ease;
        }
        
        .form-input:focus + .input-icon {
            color: white;
            transform: translateY(-50%) scale(1.15) rotateY(10deg);
        }
        
        /* Advanced Submit Button */
        .submit-btn {
            width: 100%;
            padding: 1.5rem;
            background: linear-gradient(45deg, #667eea, #764ba2);
            color: white;
            border: none;
            border-radius: 16px;
            font-size: 1.15rem;
            font-weight: 800;
            cursor: pointer;
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 12px 35px rgba(102, 126, 234, 0.5);
            margin: 2.5rem 0 2rem;
            animation: buttonRise 1s ease-out 1.2s both;
            transform-style: preserve-3d;
            position: relative;
            overflow: hidden;
            letter-spacing: 1px;
        }
        
        .submit-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.25), transparent);
            transition: left 0.6s;
        }
        
        .submit-btn:hover::before {
            left: 100%;
        }
        
        .submit-btn:hover {
            background: linear-gradient(45deg, #5a6fd8, #6a42a0);
            transform: translateY(-6px) translateZ(15px) rotateX(5deg);
            box-shadow: 0 20px 50px rgba(102, 126, 234, 0.7);
        }
        
        .submit-btn:active {
            transform: translateY(-3px) translateZ(8px) rotateX(2deg);
        }
        
        @keyframes buttonRise {
            0% { opacity: 0; transform: translateY(30px) rotateX(-15deg) scale(0.9); }
            100% { opacity: 1; transform: translateY(0) rotateX(0deg) scale(1); }
        }
        
        /* Form Footer */
        .form-footer {
            text-align: center;
            animation: footerFadeIn 1s ease-out 1.4s both;
        }
        
        .form-link {
            color: rgba(255, 255, 255, 0.85);
            text-decoration: none;
            font-weight: 600;
            transition: all 0.4s ease;
            position: relative;
            display: inline-block;
        }
        
        .form-link:hover {
            color: white;
            text-shadow: 0 3px 10px rgba(255, 255, 255, 0.4);
            transform: translateY(-2px);
        }
        
        .form-link::after {
            content: '';
            position: absolute;
            bottom: -3px;
            left: 0;
            width: 0;
            height: 3px;
            background: linear-gradient(45deg, #667eea, #764ba2);
            transition: width 0.4s ease;
            border-radius: 2px;
        }
        
        .form-link:hover::after {
            width: 100%;
        }
        
        @keyframes footerFadeIn {
            0% { opacity: 0; transform: translateY(15px); }
            100% { opacity: 1; transform: translateY(0); }
        }
        
        /* Enhanced Error Message */
        .error-message {
            background: linear-gradient(45deg, rgba(255, 107, 107, 0.2), rgba(255, 107, 107, 0.15));
            color: #ff6b6b;
            padding: 1.2rem;
            border-radius: 16px;
            margin-bottom: 2rem;
            border: 2px solid rgba(255, 107, 107, 0.4);
            font-weight: 600;
            text-align: center;
            backdrop-filter: blur(15px);
            animation: errorBounceIn 0.6s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 0 8px 25px rgba(255, 107, 107, 0.3);
        }
        
        @keyframes errorBounceIn {
            0% { opacity: 0; transform: translateY(-20px) scale(0.8); }
            60% { opacity: 1; transform: translateY(5px) scale(1.05); }
            100% { opacity: 1; transform: translateY(0) scale(1); }
        }
        
        /* Responsive Design */
        @media (max-width: 1024px) {
            .main-container {
                max-width: 750px;
            }
            
            .form-card {
                padding: 2.5rem 3rem;
                gap: 3rem;
            }
            
            .form-icon {
                width: 110px;
                height: 110px;
                font-size: 4rem;
            }
            
            .form-title {
                font-size: 2.6rem;
            }
        }
        
        @media (max-width: 768px) {
            .main-container {
                padding: 0.5rem;
                max-width: 520px;
            }
            
            .form-card {
                flex-direction: column;
                padding: 2.5rem;
                margin-top: 1rem;
                gap: 2rem;
                min-height: auto;
            }
            
            .form-header {
                flex: none;
                padding-right: 0;
                margin-bottom: 0;
            }
            
            .form-content {
                flex: none;
                padding-left: 0;
            }
            
            .form-title {
                font-size: 2.2rem;
            }
            
            .character {
                font-size: 4rem;
            }
            
            .form-icon {
                width: 90px;
                height: 90px;
                font-size: 3.5rem;
                margin-bottom: 1.5rem;
            }
            
            .character-stage {
                top: 5%;
            }
        }
        
        @media (max-width: 480px) {
            .character-stage {
                top: 3%;
            }
            
            .character {
                font-size: 3.5rem;
            }
            
            .main-container {
                padding: 0.5rem;
                max-width: 450px;
            }
            
            .form-card {
                padding: 2rem;
                margin-top: 0.5rem;
            }
            
            .form-title {
                font-size: 2rem;
            }
            
            .form-input {
                padding: 1.5rem 1.5rem 1.5rem 4rem;
                font-size: 1.1rem;
            }
            
            .input-icon {
                left: 1.5rem;
                font-size: 1.3rem;
            }
        }
        
        @media (max-height: 750px) {
            .character-stage {
                top: 1%;
            }
            
            .character {
                font-size: 3rem;
            }
            
            .form-card {
                margin-top: 0.5rem;
                padding: 2rem;
            }
            
            .form-group {
                margin-bottom: 1.5rem;
            }
            
            body {
                padding: 0.5rem 0;
            }
        }
    </style>
</head>
<body>
    <!-- Background Elements -->
    <div class="bg-elements">
        <div class="floating-shape"></div>
        <div class="floating-shape"></div>
        <div class="floating-shape"></div>
        <div class="floating-shape"></div>
        <div class="floating-shape"></div>
    </div>
    
    <!-- 3D Character Animation -->
    <div class="character-stage">
        <div class="character-container">
            <div class="character">✨</div>
        </div>
    </div>
    
    <!-- Main Form Container -->
    <div class="main-container">
        <div class="form-card">
            <div class="form-header">
                <div class="form-icon">🌟</div>
                <h1 class="form-title">Join Our Community</h1>
                <p class="form-subtitle">Create your account and start your journey</p>
            </div>
            
            <div class="form-content">
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="error-message">
                        ⚠️ <%= error %>
                    </div>
                <% } %>
            
            <form action="/signup" method="POST">
                <div class="form-group">
                    <label for="username" class="form-label">Username</label>
                    <div class="input-container">
                        <input type="text" id="username" name="username" class="form-input" placeholder="Choose your username" required>
                        <div class="input-icon">👤</div>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="email" class="form-label">Email Address</label>
                    <div class="input-container">
                        <input type="email" id="email" name="email" class="form-input" placeholder="Enter your email address" required>
                        <div class="input-icon">📧</div>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="password" class="form-label">Password</label>
                    <div class="input-container">
                        <input type="password" id="password" name="password" class="form-input" placeholder="Create a secure password" required>
                        <div class="input-icon">🔒</div>
                    </div>
                </div>
                
                <button type="submit" class="submit-btn">
                    🚀 Create Account
                </button>
            </form>
            
            <div class="form-footer">
                <p><a href="/signin" class="form-link">Already have an account? Sign in here</a></p>
            </div>
            </div>
        </div>
    </div>
</body>
</html>
